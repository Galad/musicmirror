<Window x:Class="MusicMirror.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
		<TextBlock Text="Source Path" />
        <TextBox Text="{Binding SourcePath.Value, Mode=TwoWay}" />
		<TextBlock Text="Target Path" />
        <TextBox Text="{Binding TargetPath.Value, Mode=TwoWay}" />
		<Button Content="Save" HorizontalAlignment="Right" Command="{Binding SaveCommand}" Margin="0,8,0,0" />
    </StackPanel>
</Window>
